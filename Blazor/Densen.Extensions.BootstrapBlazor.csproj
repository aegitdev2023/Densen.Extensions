<Project Sdk="Microsoft.NET.Sdk.Razor">
  
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <IsPackable>true</IsPackable>
    <PackageIcon>logo.png</PackageIcon>
    <Version>0.0.2</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>Densen Informatica</Company>
    <Authors>Alex Chow</Authors>
    <Description>Densen's Blazor组件库以及BootstrapBlazor服务扩展包</Description>
    <I18nTextFallBackLanguage>zh-CN</I18nTextFallBackLanguage>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="BootstrapBlazor" Version="5.18.4" />
    <PackageReference Include="Toolbelt.Blazor.I18nText" Version="9.4.1" />
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="logo.png" Pack="true" PackagePath="" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\AME.Extensions\AME.Extensions.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Update="wwwroot\README.md">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>

@page "/testcanvas"
@namespace DemoShared.Pages
@attribute [TabItemOption(Text = "图像测试")]

@using BootstrapBlazor.Components

<Tab IsLazyLoadTabItem>
    <TabItem Text="Demo">
        <ImageHelper @ref="ImageHelper" Options="Options" OnResult="OnResult" />
    </TabItem>
    <TabItem Text="Canvas">
        <Canvas />
    </TabItem>

</Tab>

@MessageString

@*<Select @bind-Value="Options.Type" ShowLabel="true" />*@


@code{
    string? MessageString { get; set; } 

    ImageHelper? ImageHelper { get; set; }

    private ImageHelperOption Options { get; set; } = new();

    private Task OnResult(string value)
    {
        MessageString = value;
        return Task.CompletedTask;
    }
}
@page "/UploadToBase64s"
@attribute [TabItemOption(Text = "上传图片")]

<b>在移动设备上可使用相机拍照</b>
<UploadToBase64 OnError="OnError" OnChanged="OnChanged" UploadButtonText="可使用相机拍照" />
<b>在移动设备上使用前置相机拍照</b>
<UploadToBase64 OnError="OnError" OnChanged="OnChanged" CaptureUser UploadButtonText="可使用前置相机拍照"  />
<b>只上传图片,多选</b>
<UploadToBase64 OnError="OnError" OnChanged="OnChanged" Capture="false" />
<b>只上传图片,单选</b>
<UploadToBase64 OnError="OnError" OnChanged="OnChanged" Multiple="false" />
<b>上传所有文件,多选</b>
<UploadToBase64 OnError="OnError" OnChanged="OnChanged" ImageOnly="false" UploadButtonText="所有文件类型" />
<b>只上传txt文件,单选</b>
<UploadToBase64 OnError="OnError" OnChanged="OnChanged" ImageOnly="false" Multiple="false" Accept=".txt" UploadButtonText="仅 txt" />
<b>自定义样式</b>
<UploadToBase64 OnError="OnError" OnChanged="OnChanged" Style=" width: 60px; height: 60px; padding: 10px; background-color: #f55442; color: white; border-radius: 25px; cursor: pointer; " />

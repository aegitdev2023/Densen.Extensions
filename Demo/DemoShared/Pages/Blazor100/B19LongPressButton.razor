@page "/b19LongPressButton"
@namespace DemoShared
@attribute [TabItemOption(Text = "长按事件")]

<PageTitle>支持长按事件的按钮组件</PageTitle>

Blazor100 : 自做一个支持长按事件的按钮组件
https://www.cnblogs.com/densen2014/p/17915285.html

<LongPressButton OnLongPress="TaskOnLongPress">
    <div style="width:200px;height:100px;background-color:gold;">
        <p>LongPressButton</p>
    </div>
</LongPressButton>

<p>@message</p>

@code {
    string message = "No long press";

    private Task TaskOnLongPress(MouseEventArgs e)
    {
        message = e.Type;
        StateHasChanged();
        return Task.CompletedTask;
    }
}